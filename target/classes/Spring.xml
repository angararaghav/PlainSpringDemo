<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- bean definitions here -->


<bean id="vehicle" class="com.playstation.spring.Car"></bean>
<bean id="bigvehicle" class="com.playstation.spring.Truck"></bean>

<context:component-scan base-package="com.playstation.spring"></context:component-scan>

<bean id="tyre" class="com.playstation.spring.Tyre">
	<constructor-arg value="MRF"></constructor-arg>
	<!-- <property name="brand" value"MRF"></property> -->
</bean>
</beans>